    <bean id="person" class="uz.pdp.springframeworkcore.Person"
          factory-method="getInstance"
          init-method="init"
          destroy-method="destroy"
          p:fullName="Elbek" p:age="21"
    >
        <property name="nickNames">
            <list>
                <value>PlaceHolder</value>
                <value>Robin</value>
                <value>John</value>
                <value>Troubler</value>
            </list>
        </property>
        <property name="nickNamesWithMap">
            <map>
                <entry key="1" value="John"/>
                <entry key="2" value="Robin"/>
            </map>
        </property>
    </bean>
    <!--c:fullName="Elmurodov Javohir" c:age="28"-->
    <bean id="baseDao" class="uz.pdp.springframeworkcore.BaseDAO"
          c:url="${spring.datasource.url}"
          c:user="${spring.datasource.user}"
          c:password="${spring.datasource.password}"
          c:database="${spring.datasource.database}"
          c:schema="${spring.datasource.schema}"
          c:driver="${spring.datasource.driver}"
    />

    <bean id="userService" class="uz.pdp.springframeworkcore.UserService" />
    <bean id="roleService" class="uz.pdp.springframeworkcore.RoleService" />

</beans>